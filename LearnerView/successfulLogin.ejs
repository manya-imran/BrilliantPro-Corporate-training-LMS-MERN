<div class="conainer mt-5 ml-5 mr-5">
    <h1 style="color: darkred;">
        <b><i>Courses</i></b>        
    </h1>
    <hr>

    <div class="container">
      <div class="conainer">
        <br><br>
        <table style="border-width: 10px;">
          <th><b>Course Description</b></th>
          <tr>
            <td><b>Course Name</b></td><td><b>Course Status</b></td>
          </tr>
          <tr>
            <td>HTML Course</td><td>Pending</td>
          </tr>
          <tr>
            <td>CSS Course</td><td>Completed</td>
          </tr>
          <tr>
            <td>JS Course</td><td>Pending</td>
          </tr>
        </table>
      </div>
      <br><br>
      <button type="submit" class="btn btn-primary">Add Course</button>
      <button type="submit" class="btn btn-primary">Delete Course</button>
    </div>


<div class="conainer mt-5 ml-5 mr-5">
