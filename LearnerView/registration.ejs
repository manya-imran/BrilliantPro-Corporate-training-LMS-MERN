<%- include('./partials/header.ejs') %>    
<%- include('./partials/navbar.ejs') %>    
<div class="conainer mt-5 ml-5 mr-5">
    <h1>Registration Page</h1>
    <hr>
    <form  method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
          </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter Email" required>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
          <label for="courses">Courses:</label>
          <input type="text" class="form-control" id="courses" name="courses" placeholder="Course Name">
        </div>
        <div class="form-group">
          <label for="projects">Projects:</label>
          <input type="text" class="form-control" id="projects" name="projects" placeholder="Project Name">
        </div>
        <div class="form-group">
          <label for="certifications">Certifications:</label>
          <input type="text" class="form-control" id="certifications" name="certifications" placeholder="Certification Name">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
